.row
  .large-12.columns
    %h3
      Dashboard for
      = @restaurant.name
.row
  .large-3.columns#dash_links
    %ul
      %li
        = link_to 'Create a menu', new_menu_path
      %li
        = link_to 'Edit details', edit_restaurant_path(@restaurant)
      - if @restaurant.menus.any?
        %li
          = link_to "Add dish to #{@restaurant.menus.first.name}", new_menu_dish_path(@restaurant.menus.first)

  .large-9.columns.dashboard-content
    %p
      Hello
      = current_user.email
    %p
      This is your dashboard